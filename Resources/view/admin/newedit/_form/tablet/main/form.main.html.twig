{% trans_default_domain 'delivery.admin' %}

<div class="d-flex flex-column gap-2 mb-3">

    <div class="d-flex flex-column gap-2 ">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки  #}
                        {{ 'form.header.basic'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                <div class="d-flex gap-3">
                    <div class="w-50 mt-3">
                        {# Обложка #}
                        {{ include(_self|replace({ "form.main.html.twig": "_cover.html.twig" })) }}
                    </div>
                    <div class="w-50">
                        {# Основные настройки #}
                        {{ include(_self|replace({ "form.main.html.twig": "_main.html.twig" })) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки  #}
                        Ограничения
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Ограничения #}
                {{ include(_self|replace({ "form.main.html.twig": "_confines.html.twig" })) }}
            </div>
        </div>

    </div>


    <div class="d-flex flex-column gap-2">
        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Настройки локали  #}
                        {{ 'form.header.local'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Настройки локали  #}
                {{ include(_self|replace({ "form.main.html.twig": "_trans.html.twig" })) }}
            </div>
        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки  #}
                        Стоимость доставки
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Стоимость доставки #}
                {{ include(_self|replace({ "form.main.html.twig": "_price.html.twig" })) }}

            </div>
        </div>


    </div>
</div>

<div class="card w-100 border-light">

    <div class="card-header border-light bg-body">

        <div class="card-title">
            <h4>
                {# Пользовательское соглашение  #}
                Пользовательское соглашение
            </h4>
        </div>
    </div>

    <div class="card-body text-start pb-0">
        {# Пользовательское соглашение #}
        {{ include(_self|replace({ "form.main.html.twig": "_agreement.html.twig" })) }}
    </div>
</div>




